      </button>

      <!-- Navbar Links -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/home" style="color: #4A4A4A;">Home</a>
          </li>
          <!-- Other Links -->
          {{#if loggedIn}}
          <li class="nav-item">
            <a class="nav-link" href="/friends" style="color: #4A4A4A;">Friends</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/createRecipe" style="color: #4A4A4A;">Create Recipe</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/myRecipes" style="color: #4A4A4A;">My Recipes</a>
          </li>
          {{/if}}
        </ul>

        <!-- Right Side: Search and Profile -->
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/search" style="color: #4A4A4A;">
              <img src="src/resources/img/search.webp" alt="Search Icon" style="width: 30px; height: 30px; transition: transform 0.3s;">
