<!-- Include Bootstrap JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<style>
/* Hover Effect on Links */
.navbar-nav .nav-item .nav-link {
  position: relative;
  color: #4A4A4A;
  font-weight: bold;
  padding: 10px 15px;
  transition: color 0.3s ease, transform 0.3s ease;
}

.navbar-nav .nav-item .nav-link:hover {
  color: #FF6347; /* Coral color for hover effect */
  transform: scale(1.1);
}

.navbar-nav .nav-item .nav-link::after {
  content: '';
  position: absolute;
  width: 0;
  height: 2px;
  background-color: #FF6347; /* Coral color for underline */
  bottom: 0;
  left: 50%;
  transition: width 0.3s ease, left 0.3s ease;
}

.navbar-nav .nav-item .nav-link:hover::after {
  width: 100%;
  left: 0;
}

/* Smooth Slide-in for the entire Navbar */
@keyframes slideIn {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.navbar {
  animation: slideIn 0.5s ease-out;
}

/* Dropdown Menu Slide and Fade */
@keyframes dropdownSlide {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.navbar .nav-item.dropdown .dropdown-menu {
  animation: dropdownSlide 0.3s ease-out;
  border-radius: 5px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  padding: 5px 10px;
}

/* Search Icon Zoom */
.navbar-nav .nav-item img {
  transition: transform 0.3s ease;
}

.navbar-nav .nav-item img:hover {
  transform: scale(1.2);
}

/* Profile Image Border Color Change on Hover */
.navbar-nav .nav-item img.rounded-circle {
  transition: border-color 0.3s ease;
  border: none; /* Ensure no border is applied */
  box-shadow: none; /* Remove shadow if it's adding extra space */
}

.navbar-nav .nav-item img.rounded-circle:hover {
  border-color: #FF6347; /* Only on hover, change border color */
}

/* Remove the dropdown arrow */
.navbar .nav-item.dropdown .dropdown-toggle::after {
  display: none; /* This removes the arrow (caret) from the dropdown */
}

</style>
