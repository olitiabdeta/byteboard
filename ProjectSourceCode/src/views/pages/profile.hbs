<div class="container mt-5">
  <h2>Profile Details</h2>
  {{#if error}}
    <div class="alert alert-danger">{{message}}</div>
  {{else}}
    <div class="card mt-3">
      <div class="card-body">
        <h4 class="card-title">{{profile.username}}</h4>
        <p class="card-text"><strong>Email:</strong> {{profile.email}}</p>
        <p class="card-text"><strong>Bio:</strong> {{profile.bio}}</p>
        <p class="card-text"><strong>Favorite Cuisines:</strong> {{profile.favorite_cuisines}}</p>
        <p class="card-text"><strong>Custom Cuisines:</strong> {{profile.custom_cuisines}}</p>
        <p class="card-text"><strong>Dietary Preferences:</strong> {{profile.dietary_preferences}}</p>
        <p class="card-text"><strong>Custom Preferences:</strong> {{profile.custom_preferences}}</p>
        {{#if profile.profile_pic}}
          <img src="{{profile.profile_pic}}" alt="Profile Picture" class="rounded" style="max-width: 150px;">
        {{/if}}
      </div>
    </div>
  {{/if}}
</div>