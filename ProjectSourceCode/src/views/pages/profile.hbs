{{!-- view profile details --}}
<div class="container mt-5">
  <h2>Profile Details</h2>
  {{#if error}}
    <div class="alert alert-danger">{{message}}</div>
  {{else}}
    <div class="card mt-3">
      <div class="card-body">
        <h4 class="card-title">{{profile.username}}</h4>
        <p class="card-text"><strong>Username:</strong> {{profile.user_id}}</p>
        <p class="card-text"><strong>Bio:</strong> {{profile.bio}}</p>
        <p class="card-text"><strong>Dietary Preferences:</strong> {{profile.dietary_preferences}}</p>
        <p class="card-text"><strong>Intolerances:</strong> {{profile.intolerances}}</p>
        {{#if profile.profile_pic}}
          <img src="{{profile.profile_pic}}" alt="Profile Picture" class="rounded" style="max-width: 150px;">
        {{/if}}
      </div>
    </div>
  {{/if}}
</div>


<style>
  /* Ensure full height for html and body */
  html, body {
    height: 100%;
    margin: 0;
    display: flex;
    flex-direction: column;
  }

  /* Background styling with gradient animation */
  body {
    margin: 0;
    padding: 0;
    background: linear-gradient(120deg, #FFB84D, #FF6F61, #FFD700);
    background-size: 300% 300%;
    animation: gradient-animation 8s ease infinite;
    color: white;
    flex: 1;  /* Allow body to take up all available space */
  }

  /* Gradient animation */
  @keyframes gradient-animation {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* Container styling - helps keep the footer at the bottom */
  .container {
    flex: 1; /* container take all available space */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px; 
  }

  /* Card styling */
  .card {
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
  }

  .card-title {
    color: #FF6F61;
  }

  /* Button styling */
  .btn-primary {
    background-color: #FF6F61;
    border: none;
    transition: background-color 0.3s;
  }

  .btn-primary:hover {
    background-color: #FF8C71;
  }

  /* Footer styling */
  footer {
    background-color: rgba(0, 0, 0, 0.8);
    color: white;
    text-align: center;
    padding: 10px;
    position: relative;
    width: 100%;
    margin-top: auto; /* Push footer to the bottom */
  }

    /* gradient  to the title - discover */
    h2.text-center {
        font-size: 3rem;
        font-weight: bold;
        background: linear-gradient(45deg, #ff69b4, #44edc9);
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
        text-align: center;
        letter-spacing: 1px;
        text-transform: uppercase;
        animation: shine 3s ease-in-out infinite;
    }

    /* Animation for the gradient effect */
    @keyframes shine {
        0% {
        background-position: 0% 50%;
        }
        50% {
        background-position: 100% 50%;
        }
        100% {
        background-position: 0% 50%;
        }
    }

    /* shadow  to discover */
    h2.text-center {
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    }
</style>
