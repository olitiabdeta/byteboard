<h2 class="text-center" style="font-family: 'Poppins', sans-serif; color: #f0f0f0;">Discover</h2>

<div class="row" id="discover">
    {{#each results}}
        <div class="col-sm-3 mb-3 mb-sm-0 ms-5 mt-4">
          <div class="card" style="width: 18rem;" id="home-card-1">
            <img src="{{#if image}} {{image}} {{else}} 'default-recipe-image.jpg' {{/if}}" class="card-img-top" alt="{{name}}" style="width: 18rem; height: 12rem;">
            <div class="card-body">
              <h5 class="card-title">{{name}}</h5>
              <p class="text-center">Total Time: {{totalTime}}</p>
              <a href="{{recipeURL}}" class="btn btn-primary">View Recipe</a>
            </div>
          </div>
        </div>
    {{/each}}
</div>

<style>
    /* gradient animation to background */
    body {
        background: linear-gradient(45deg,  #FFB84D, #FF6F61, #FFD700);
        background-size: 400% 400%;
        animation: gradientBackground 10s ease infinite;
        min-height: 100vh;
        margin: 0;
    }

    /* Keyframes for background gradient animation */
    @keyframes gradientBackground {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
    /* Overall container */
    #discover {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
    }

    .card-img-top {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        object-fit: cover;
    }

    .card-body {
        text-align: center;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #333;
    }

    .card-body p {
        font-size: 1rem;
        color: #555;
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #FF6F61;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        text-decoration: none;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #FF6F61;
    }

    @media (max-width: 768px) {
        .col-sm-3 {
            flex: 0 0 48%; /* 2 cards per row on medium screens */
        }
    }

    @media (max-width: 576px) {
        .col-sm-3 {
            flex: 0 0 100%; /* 1 card per row on small screens */
        }
    }


    /* gradient  to the title - discover */
    h2.text-center {
        font-size: 3rem;
        font-weight: bold;
        background: linear-gradient(45deg, #ff69b4, #44edc9);
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
        text-align: center;
        letter-spacing: 1px;
        text-transform: uppercase;
        animation: shine 3s ease-in-out infinite;
    }

    /* Animation for the gradient effect */
    @keyframes shine {
        0% {
        background-position: 0% 50%;
        }
        50% {
        background-position: 100% 50%;
        }
        100% {
        background-position: 0% 50%;
        }
    }

    /* shadow  to discover */
    h2.text-center {
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    }
</style>