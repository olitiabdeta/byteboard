<h2 class="text-center" style="font-family: 'Poppins', sans-serif; color: #f0f0f0;">Search</h2>
<div class="topnav">

  <form action="/search" method="GET" class="search-bar">
    <input type="text" name="query" placeholder="Search for a recipe" required>
    <button type="submit">Search</button>
  </form>
</div>

{{!-- <h1 class="text-center">Search</h1> --}}

<h2 class="text-center" style="font-family: 'Poppins', sans-serif; color: #f0f0f0;">Search Results</h2>
<div class="container">
  {{#if message}}
    <p class="text-center">{{message}}</p>
  {{else}}
    <ul>
      {{#each recipes}}
        <li>
          <h2>{{this.recipe_name}}</h2>
          <p>{{this.recipe_description}}</p>
          <p><strong>Prep Time:</strong> {{this.recipe_prep_time}} minutes</p>
          <p><strong>Cook Time:</strong> {{this.recipe_cook_time}} minutes</p>
          <p><strong>Difficulty:</strong> {{this.recipe_difficulty}}</p>
          <p><strong>Servings:</strong> {{this.recipe_servings}}</p>
        </li>
      {{/each}}
    </ul>
  {{/if}}
</div>

