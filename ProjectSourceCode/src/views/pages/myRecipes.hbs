<h2 class="text-center" style="font-family: 'Poppins', sans-serif; color: #f0f0f0;">My Recipes</h2>
{{#if recipes.length}}
      <div class="recipe-grid">
        {{#each recipes}}
          <div class="recipe-card">
            <img src="{{this.image_url}}" alt="{{this.recipe_name}}" onerror="this.src='/images/default-recipe.jpg';">
            <h2>{{this.recipe_name}}</h2>
            <p>{{this.recipe_description}}</p>
            <p><strong>Prep Time:</strong> {{this.recipe_prep_time}} minutes</p>
            <p><strong>Cook Time:</strong> {{this.recipe_cook_time}} minutes</p>
            <p><strong>Servings:</strong> {{this.recipe_servings}}</p>
            <a href="/viewRecipe/{{this.recipe_id}}" class="btn btn-primary">View Recipe</a>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p>No recipes found. <a href="/createRecipe">Create your first recipe!</a></p>
    {{/if}}

<!-- Include only necessary scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/resources/js/script.js"></script>

