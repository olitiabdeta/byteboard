<h2 class="text-center" style="font-family: 'Poppins', sans-serif;">Friends</h2>
{{#if message}}
    <div class="alert alert-danger">{{message}}</div>
  {{/if}}
{{#if friends.length}}
  <div class="friends-list mt-4">
    {{#each friends}}
      <div class="friend-card">
        <div class="friend-card-header">
          {{#if profile_pic}}
            <img src="{{profile_pic}}" alt="{{username}}'s Profile Picture" class="friend-card-img">
          {{else}}
            <div class="friend-card-placeholder">No Image</div>
          {{/if}}
        </div>
        <div class="friend-card-body">
          <h5 class="friend-card-title">{{first_name}} {{last_name}}</h5>
          <p class="friend-card-username">@{{username}}</p>
          
          {{#if bio}}
            <p class="friend-card-bio"><strong>Bio:</strong> {{bio}}</p>
          {{/if}}
          {{#if dietary_preferences.length}}
            <p class="friend-card-diet"><strong>Dietary Preferences:</strong> 
              {{#each dietary_preferences}}
                {{this}}{{#unless @last}}, {{/unless}}
              {{/each}}
            </p>
          {{/if}}
          {{#if intolerances.length}}
            <p class="friend-card-intolerances"><strong>Intolerances:</strong> 
              {{#each intolerances}}
                {{this}}{{#unless @last}}, {{/unless}}
              {{/each}}
            </p>
          {{/if}} 
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <div class="alert alert-info">You have no friends added yet. Add some below!</div>
{{/if}}

<!-- Add Friend Form -->
<div class="card mt-4" style="width: 100%; max-width: 600px;">
  <div class="card-body">
    <h4 class="card-title">Add a Friend</h4>
    <form method="POST" action="/friends">
      <div class="mb-3">
        <label for="friendUsername" class="form-label">Friend's Username</label>
        <input type="text" id="friendUsername" name="friendUsername" class="form-control" placeholder="Enter a username" required>
      </div>
      <button type="submit" class="btn btn-primary" style="width: 100%;">Add Friend</button>
    </form>
  </div>
</div>

<style>
  .friends-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  .friend-card {
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 300px;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .friend-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  .friend-card-header {
    position: relative;
    width: 100%;
    height: 150px;
    background-color: #f0f0f0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .friend-card-img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-bottom: 1px solid #ddd;
  }

  .friend-card-placeholder {
    font-size: 14px;
    color: #777;
    text-transform: uppercase;
  }

  .friend-card-body {
    padding: 15px;
    text-align: center;
  }

  .friend-card-title {
    margin: 0;
    font-size: 18px;
    font-weight: bold;
    color: #333;
  }

  .friend-card-username {
    font-size: 14px;
    color: #555;
    margin: 5px 0;
  }

  .friend-card-bio,
  .friend-card-diet,
  .friend-card-intolerances {
    font-size: 14px;
    color: #666;
    margin: 5px 0;
    text-align: left;
  }

  .btn-primary {
    background-color: #FF6F61;
    border: none;
    transition: background-color 0.3s;
  }

  .btn-primary:hover {
    background-color: #FF8C71;
  }
</style>