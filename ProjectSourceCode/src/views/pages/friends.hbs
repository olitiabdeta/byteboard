  position: relative;
  width: 100%;
  height: 150px;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.friend-card-img {
  width: 100%;
  height: 150px;
  object-fit: cover;
  border-bottom: 1px solid #ddd;
}

.friend-card-placeholder {
  font-size: 14px;
  color: #777;
  text-transform: uppercase;
}

.friend-card-body {
  padding: 15px;
  text-align: center;
}

.friend-card-title {
  margin: 0;
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.friend-card-username {
  font-size: 14px;
  color: #555;
  margin: 5px 0;
}

.friend-card-bio,
.friend-card-diet,
.friend-card-intolerances {
  font-size: 14px;
  color: #666;
  margin: 5px 0;
  text-align: left;
}

/* Add Friend Form Styling */
.card {
  background: white;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  margin-left: 20px; /* Move the form a little off the left edge */
}

/* Button Styling */
.btn-primary {
  background-color: #FF6F61;
  border: none;
  transition: background-color 0.3s;
}

.btn-primary:hover {
  background-color: #FF8C71;
}

/* Gradient and text shadow for the title */
h2.text-center {
  font-size: 3rem;
  font-weight: bold;
  background: linear-gradient(45deg, #ff69b4, #44edc9);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  text-align: center;
  letter-spacing: 1px;
  text-transform: uppercase;
  animation: shine 3s ease-in-out infinite;
  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
}

/* Animation for the gradient effect */
@keyframes shine {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
</style>